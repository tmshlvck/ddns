DirectoryIndex display
Options +ExecCGI

<Files "rest">
  SetHandler wsgi-script
  AuthType Basic
  AuthName "IH"
  AuthUserFile /<path>/htpasswd
  Require valid-user
</Files>

<FilesMatch ".+\.py(c|o)$">
  Order Deny,Allow
  Deny from all
</FilesMatch>

<LimitExcept POST GET>
  Order Allow,Deny
  Allow from all
</LimitExcept>
